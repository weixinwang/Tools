<base:WindowBase  xmlns:my="clr-namespace:AutoUpdater" x:Class="AutoUpdater.UI.DownFileProcess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:base="clr-namespace:AutoUpdater.Base"
        Title="升级提醒" Width="500" Height="300" x:Name="w">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border x:Name="BProcess" BorderBrush="#42464d" Width="480" Height="40" BorderThickness="1" HorizontalAlignment="Center">
            <Rectangle x:Name="RectProcess" Fill="Green" Width="0" HorizontalAlignment="Left"></Rectangle>
        </Border>
        <TextBlock x:Name="TxtProcess" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <ScrollViewer Width="480" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="TxtDes" TextWrapping="Wrap" Foreground="White" Width="460"></TextBlock>
        </ScrollViewer>
    </Grid>
</base:WindowBase >